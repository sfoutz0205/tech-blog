<article class="post">
  <div class="title">
    <a href="/post/{{id}}" class="post-title">{{title}}</a>
  </div>
  <div class="post-body">
    {{post_text}}
  </div>
  <div class="post-info">
    posted by {{user.username}} on
    {{format_date created_at}}
    |
    {{comments.length}} {{format_plural "comment" comments.length}}
  </div>
</article>